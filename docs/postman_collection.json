  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Gerar timestamp único para testes",
          "const timestamp = Date.now();",
          "pm.collectionVariables.set('timestamp', timestamp);",
          "",
          "// Gerar CPF único para testes (formato básico)",
          "const cpfTeste = '123' + timestamp.toString().slice(-8);",
          "pm.collectionVariables.set('cpf_teste', cpfTeste);",
          "",
          "// Gerar chassi único",
          "const chassiTeste = '1HGBH41JXMN' + timestamp.toString().slice(-6);",
          "pm.collectionVariables.set('chassi_teste', chassiTeste);",
          "",
          "// Gerar placa única",
          "const placaTeste = 'TST' + timestamp.toString().slice(-4);",
          "pm.collectionVariables.set('placa_teste', placaTeste);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Testes globais para todas as requisições",
          "pm.test('Response time is less than 5000ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "pm.test('Response has success field', function () {",
          "    const jsonData = pm.response.json();",
          "    pm.expect(jsonData).to.have.property('success');",
          "});",
          "",
          "// Log da resposta para debug",
          "console.log('Response Status:', pm.response.status);",
          "console.log('Response Body:', pm.response.text());"
        ]
      }
    }
  ]
}
